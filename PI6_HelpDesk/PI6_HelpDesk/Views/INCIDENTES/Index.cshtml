                @Html.DisplayFor(modelItem => item.INC_VIGENCIA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.INC_NUMTICKET)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.INC_COMENTARIO)
