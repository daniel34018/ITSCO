            <td>
                @Html.DisplayFor(modelItem => item.TBL_PRIORIDAD.PRI_NOMBRE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TBL_USUARIO.USU_LOGIN)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.INC_ID }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.INC_ID }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.INC_ID })
            </td>

        </tr>
    }

</table>

